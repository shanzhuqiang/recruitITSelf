.sharePageWrap .loginNow{
	width: 620rpx;
	height: 80rpx;
  line-height: 80rpx;
  text-align: center;
	background-color: #ef4933;
	border-radius: 6rpx;
	font-family: MicrosoftYaHei;
	font-size: 28rpx;
	color: #fff;
  margin: 0 auto 20rpx;
}
.sharePageWrap .haveLogin{
	width: 620rpx;
  text-align: right;
