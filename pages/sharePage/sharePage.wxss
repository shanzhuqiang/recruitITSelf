/* pages/sharePage/sharePage.wxss */
.sharePageWrap{
  position: relative;
  height: 1472rpx;
  width: 100%;
}
.sharePageWrap .backHome{
	width: 97rpx;
	height: 97rpx;
  border-radius: 50%;
	background-image: linear-gradient(-15deg, 
		#fd2525 0%, 
		#ffd295 100%), 
	linear-gradient(
		#fe4a5b, 
		#fe4a5b);
	background-blend-mode: normal, 
		normal;
	font-family: FZMHK--GBK1-0;
	font-size: 28rpx;
	letter-spacing: 1px;
	color: #fff;
  text-align: center;
  position: absolute;
  right: 30rpx;
  top: 795rpx;
  z-index: 99;
}
.sharePageWrap .shareBg{
  position: absolute;
  left: 0;
  top: 0;
