/* pages/myRelease/myRelease.wxss */
.myReleaseWrap{

}
.myReleaseWrap .topBox{
  height: 90rpx;
  line-height: 90rpx;
  display: flex;
  border-bottom: 1rpx solid #eee;
  padding: 0 30rpx;
}
.myReleaseWrap .topBox .item{
  width: 30%;
	font-family: PingFangSC-Regular;
	font-size: 30rpx;
	color: #666;
  position: relative;
  text-align: center;
}
.myReleaseWrap .topBox .item.active{
	font-family: PingFangSC-Medium;
	color: #333;
}
.myReleaseWrap .topBox .item.active::after{
  content: "";
  position: absolute;
  width: 40rpx;
  height: 6rpx;
  background: #2e70f9;
  left: 70rpx;
  bottom: 0rpx
}
.myReleaseWrap .topBox .item .arrowDown{
  width: 15rpx;
  height: 10rpx;
  vertical-align: middle;
}
/* item */
.myReleaseWrap .itemBox{
  padding: 30rpx 30rpx 20rpx;
  border-bottom: 16rpx solid #f8f8f8;
}
.myReleaseWrap .itemBox .topName{
  height: 50rpx;
  line-height: 50rpx;
  padding-bottom: 30rpx;
}
.myReleaseWrap .itemBox .topName .touxiang{
  width: 40rpx;
  height: 40rpx;
  vertical-align: middle;
}
.myReleaseWrap .itemBox .topName .name{
  display: inline-block;
	font-family: PingFangSC-Regular;
	font-size: 28rpx;
	color: #999;
  margin-left: 14rpx;
}
.myReleaseWrap .itemBox .topName .shenfen{
  display: inline-block;
	font-family: PingFangSC-Regular;
	font-size: 20rpx;
	color: #fff;
	border-radius: 4rpx;
  padding: 0 12rpx;
  height: 34rpx;
  line-height: 34rpx;
  margin: 0 24rpx 0 10rpx;
}
.myReleaseWrap .itemBox .topName .shenfen.one{
	background-image: linear-gradient(-90deg, 
		#80a9ff 0%, 
		#3c7bfd 100%);
}
.myReleaseWrap .itemBox .topName .shenfen.two{
	background-image: linear-gradient(-90deg, 
		#4beeda 0%, 
		#19dfba 100%);
}
.myReleaseWrap .itemBox .topName .shenfen.three{
	background-image: linear-gradient(-90deg, 
		#f5d50a 0%, 
		#ffcc00 42%, 
		#fca607 100%);
}
.myReleaseWrap .itemBox .topName .time{
  display: inline-block;
	font-family: PingFangSC-Regular;
	font-size: 22rpx;
	color: #999;
}
.myReleaseWrap .itemBox .title{
	font-family: PingFangSC-Medium;
	font-size: 30rpx;
	line-height: 48rpx;
	color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical
}
.myReleaseWrap .itemBox .bottomBox{
  height: 150rpx;
  padding-top: 16rpx;
}
.myReleaseWrap .itemBox .bottomBox .left{
  width: 450rpx;
  float: left;
  padding-top: 14rpx;
}
.myReleaseWrap .itemBox .bottomBox .content{
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
	font-family: PingFangSC-Regular;
	font-size: 28rpx;
	line-height: 42rpx;
	color: #666;
}
.myReleaseWrap .itemBox .bottomBox .right{
  float: right;
}
.myReleaseWrap .itemBox .bottomBox .right .rightImg{
  width: 220rpx;
  height: 150rpx;
}
.myReleaseWrap .itemBox .bottomBtn{
  height: 50rpx;
  padding-top: 20rpx;
}
.myReleaseWrap .itemBox .bottomBtn .address{
	font-family: PingFangSC-Regular;
	font-size: 24rpx;
  line-height: 60rpx;
	color: #999;
  float: left;
  width: 360rpx;
  
}
.myReleaseWrap .itemBox .bottomBtn .iconBox{
  position: relative;
  float: right;
  margin-right: 40rpx;
  margin-left: 40rpx
}
.myReleaseWrap .itemBox .bottomBtn .iconBox .discussIcon{
  width: 27rpx;
  height: 24rpx;
  vertical-align: middle;
}
.myReleaseWrap .itemBox .bottomBtn .iconBox .heartIcon{
  width: 28rpx;
  height: 24rpx;
  vertical-align: middle;
}
.myReleaseWrap .itemBox .bottomBtn .iconBox .shareIcon{
  width: 26rpx;
  height: 26rpx;
  vertical-align: middle;
}
.myReleaseWrap .itemBox .bottomBtn .iconBox .num{
	font-family: PingFangSC-Medium;
	font-size: 20rpx;
	color: #333;
  position: absolute;
  left: 30rpx;
  top: 0;
}
/* 项目 */
.myReleaseWrap .itemWrap{
  background: #fff;
  border-bottom: 16rpx solid #f8f8f8;
  padding: 30rpx 30rpx;
  position: relative;
}
.myReleaseWrap .itemWrap .first{
  position: relative;
  height: 40rpx;
}
.myReleaseWrap .itemWrap .first .box{
	width: 68rpx;
	line-height: 30rpx;
	height: 30rpx;
  text-align: center;
	background-image: linear-gradient(-45deg, 
		#4874f7 0%, 
		#1a49d2 100%), 
	linear-gradient(
		#ffffff, 
		#ffffff);
	background-blend-mode: normal, 
		normal;
	border-radius: 2rpx;
	font-family: PingFangSC-Regular;
  color: #fff;
  font-size: 24rpx;
  position: absolute;
  left: 0;
  top: 0rpx;
}
.myReleaseWrap .itemWrap .first .title{
	font-family: PingFangSC-Medium;
	font-size: 32rpx;
	color: #333;
  height: 34rpx;
  line-height: 34rpx;
  position: absolute;
  left: 0;
  top: 0rpx;
  right: 170rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.myReleaseWrap .itemWrap .first .money{
	font-family: PingFangSC-Medium;
	font-size: 32rpx;
	color: #f34848;
  position: absolute;
  top: 0rpx;
  right: 0;
}
.myReleaseWrap .itemWrap .second{
	font-size: 24rpx;
	color: #666;
  padding: 15rpx 0 25rpx;
}
.myReleaseWrap .itemWrap .second text{
	font-family: PingFangSC-Regular;
  padding: 0 20rpx;
}
.myReleaseWrap .itemWrap .second .middleText{
  border-left: 1rpx solid #666;
  border-right: 1rpx solid #666;
}
.myReleaseWrap .itemWrap .content{
  font-family: PingFangSC-Regular;
	font-size: 26rpx;
	color: #666;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical
}
.myReleaseWrap .itemWrap .line{
  border-bottom: 1rpx solid #f0f0f0;
  height: 38rpx;
}
.myReleaseWrap .itemWrap .btnWrap{
  text-align: right;
  padding: 20rpx 0;
  height: 50rpx;
}
.myReleaseWrap .itemWrap .btnWrap .timeBtn{
	width: 136rpx;
	height: 50rpx;
	line-height: 50rpx;
  text-align: center;
	border-radius: 4rpx;
	border: solid 1rpx #4c85fb;
	font-family: PingFangSC-Regular;
	font-size: 26rpx;
	color: #4c85fb;
  float: right;
}
/* 岗位 */
.myReleaseWrap .itemWrap.itemWrapTwo{
  height: 240rpx;
  padding: 50rpx 30rpx 0;
}
.myReleaseWrap .itemWrap.itemWrapTwo .first .title{
  left: 0rpx;
}
.myReleaseWrap .itemWrap.itemWrapTwo .picBox{
  height: 80rpx;
  padding-top: 10rpx;
}
.myReleaseWrap .itemWrap.itemWrapTwo .picBox .left{
  float: left;
}
.myReleaseWrap .itemWrap.itemWrapTwo .picBox .left .logoImg{
  height: 80rpx;
  width: 80rpx;
}
.myReleaseWrap .itemWrap.itemWrapTwo .picBox .right{
  margin-left: 100rpx;
}
.myReleaseWrap .itemWrap.itemWrapTwo .picBox .right .logoName{
	font-family: PingFangSC-Regular;
	font-size: 28rpx;
	color: #333;
}
.myReleaseWrap .itemWrap.itemWrapTwo .picBox .right .logoType{
	font-family: PingFangSC-Regular;
	font-size: 24rpx;
	color: #999;
}
/* 筛选 */
.myReleaseWrap .typeAllMask{
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  top: 91rpx;
  background: rgba(0, 0, 0, 0.4)
}
.myReleaseWrap .typeAllMask .maskRow{
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
	font-family: PingFangSC-Regular;
	font-size: 28rpx;
	color: #666;
  background: #fff;
  border-bottom: 1rpx solid #f0f0f0;
}
.myReleaseWrap .typeAllMask .maskRow.active{
	color: #2e70f9;
}