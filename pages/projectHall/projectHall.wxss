/* pages/projectHall/projectHall.wxss */
.projectHallWrap{
  padding-top: 102rpx;
}
.projectHallWrap .filterWrap{
  line-height: 100rpx;
  height: 100rpx;
  position: fixed;
  left: 0;
  top: 0;
  right: 0;
  border-bottom: 1rpx solid #f0f0f0;
}
.projectHallWrap .filterWrap .colBox{
  width: 33%;
  float: left;
  text-align: center;
	font-family: PingFangSC-Regular;
	font-size: 28rpx;
	color: #666;
}
.projectHallWrap .filterWrap .colBox.active{
	color: #2e70f9;
}
.projectHallWrap .filterWrap .colBox .arrowDown{
  width: 15rpx;
  height: 10rpx;
  vertical-align: middle;
  margin-left: 10rpx;
}
.projectHallWrap .filterWrap .colBox .filterImg{
  width: 22rpx;
  height: 22rpx;
  vertical-align: middle;
  margin-left: 10rpx;
}
.projectHallWrap .filterMask{
  position: fixed;
  left: 0;
  top: 102rpx;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.4)
}
.projectHallWrap .filterMask .maskBody{
  padding: 35rpx 38rpx;
  background: #fff;
}
.projectHallWrap .filterMask .maskBody .title{
	font-family: PingFangSC-Regular;
	font-size: 27rpx;
	color: #333;
  padding-bottom: 13rpx;
}
.projectHallWrap .filterMask .maskBody .filterBtnWrap{
  display: flex;
  justify-content: space-between;
  margin-top: 17rpx;
  height: 62rpx;
}
.projectHallWrap .filterMask .maskBody .filterBtnWrap > view{
  height: 60rpx;
  width: 280rpx;
	border: solid 1rpx #f0f0f0;
	font-family: PingFangSC-Regular;
	font-size: 24rpx;
  text-align: center;
}
.projectHallWrap .filterMask .maskBody .filterBtnWrap .filterBtn{
	width: 214rpx;
	height: 60rpx;
	line-height: 62rpx;
  text-align: center;
	background-color: #fff;
	border-radius: 4rpx;
	border: solid 1rpx #f0f0f0;
	font-family: PingFangSC-Regular;
	font-size: 24rpx;
	color: #666;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.projectHallWrap .filterMask .maskBody .filterBtnWrap .filterBtn.active{
	color: #2e70f9;
	background-color: #e8eeff;
}
.projectHallWrap .filterMask .maskBody .confirm{
	width: 600rpx;
	line-height: 88rpx;
	height: 88rpx;
  text-align: center;
	background-color: #4c85fb;
	border-radius: 4rpx;
	font-family: PingFangSC-Regular;
	font-size: 32rpx;
	color: #fff;
  margin: 38rpx auto 0;
}
/* 最新项目 */
.projectHallWrap .itemWrap{
  background: #fff;
  border-bottom: 16rpx solid #f8f8f8;
  padding: 50rpx 30rpx 70rpx;
  position: relative;
}
.projectHallWrap .itemWrap .first{
  position: relative;
  height: 40rpx;
}
.projectHallWrap .itemWrap .first .box{
	width: 68rpx;
	line-height: 30rpx;
	height: 30rpx;
  text-align: center;
	background-image: linear-gradient(-45deg, 
		#4874f7 0%, 
		#1a49d2 100%), 
	linear-gradient(
		#ffffff, 
		#ffffff);
	background-blend-mode: normal, 
		normal;
	border-radius: 2rpx;
	font-family: PingFangSC-Regular;
  color: #fff;
  font-size: 24rpx;
  position: absolute;
  left: 0;
  top: 0rpx;
}
.projectHallWrap .itemWrap .first .title{
	font-family: PingFangSC-Medium;
	font-size: 32rpx;
	color: #333;
  height: 34rpx;
  line-height: 34rpx;
  position: absolute;
  left: 0;
  top: 0rpx;
  right: 170rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.projectHallWrap .itemWrap .first .money{
	font-family: PingFangSC-Medium;
	font-size: 32rpx;
	color: #f34848;
  position: absolute;
  top: 0rpx;
  right: 0;
}
.projectHallWrap .itemWrap .second{
	font-size: 24rpx;
	color: #666;
  padding: 15rpx 0 25rpx;
}
.projectHallWrap .itemWrap .second text{
	font-family: PingFangSC-Regular;
  padding: 0 20rpx;
}
.projectHallWrap .itemWrap .second .middleText{
  border-left: 1rpx solid #666;
  border-right: 1rpx solid #666;
}
.projectHallWrap .itemWrap .content{
  font-family: PingFangSC-Regular;
	font-size: 26rpx;
	color: #666;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical
}
.projectHallWrap .itemWrap .peopleNum{
	font-family: PingFangSC-Regular;
	font-size: 22rpx;
	color: #ccc;
  position: absolute;
  right: 30rpx;
  bottom: 20rpx;
}