/* pages/bountyPlatform/bountyPlatform.wxss */
.bountyPlatformWrap .typeWrap{
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  display: flex;
  border-bottom: 1rpx solid #eee;
}
.bountyPlatformWrap .typeWrap > view{
	font-family: PingFangSC-Regular;
	font-size: 30rpx;
	color: #666;
  width: 50%;
}
.bountyPlatformWrap .typeWrap > view.active{
	font-family: PingFangSC-Medium;
  color: #333;
  position: relative;
}
.bountyPlatformWrap .typeWrap > view.active::after{
  content: "";
  position: absolute;
	width: 40rpx;
	height: 7rpx;
  background: #1a49d2;
  left: 165rpx;
  bottom: 0rpx
}
/* 过滤 */
.bountyPlatformWrap .filterWrap{
  height: 88rpx;
  line-height: 88rpx;
  border-bottom: 16rpx solid #f8f8f8;
}
.bountyPlatformWrap .filterWrap .colBox{
  width: 33%;
  float: left;
  text-align: center;
	font-family: PingFangSC-Regular;
	font-size: 28rpx;
	color: #666;
}
.bountyPlatformWrap .filterWrap .colBox.active{
	color: #2e70f9;
}
.bountyPlatformWrap .filterWrap .colBox .arrowDown{
  width: 15rpx;
  height: 10rpx;
  vertical-align: middle;
  margin-left: 10rpx;
}
.bountyPlatformWrap .filterWrap .colBox .filterImg{
  width: 22rpx;
  height: 22rpx;
  vertical-align: middle;
  margin-left: 10rpx;
}
/* 赏金项目 */
.bountyPlatformWrap .itemBox{
  background: #fff;
  border-bottom: 16rpx solid #f8f8f8;
  padding: 50rpx 30rpx 70rpx;
  position: relative;
}
.bountyPlatformWrap .itemBox .first{
  position: relative;
  height: 40rpx;
}
.bountyPlatformWrap .itemBox .first .box{
	width: 68rpx;
	line-height: 30rpx;
	height: 30rpx;
  text-align: center;
	background-image: linear-gradient(-45deg, 
		#ffcc00 0%, 
		#feb904 50%, 
		#fca607 100%), 
	linear-gradient(
		#ffffff, 
		#ffffff);
	background-blend-mode: normal, 
		normal;
	border-radius: 2rpx;
	font-family: PingFangSC-Regular;
  color: #fff;
  font-size: 24rpx;
  position: absolute;
  left: 0;
  top: 0rpx;
}
.bountyPlatformWrap .itemBox .first .title{
	font-family: PingFangSC-Medium;
	font-size: 32rpx;
	color: #333;
  height: 34rpx;
  line-height: 34rpx;
  position: absolute;
  left: 80rpx;
  top: 0rpx;
  right: 170rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.bountyPlatformWrap .itemBox .first .money{
	font-family: PingFangSC-Medium;
	font-size: 32rpx;
	color: #fdad06;
  position: absolute;
  top: 0rpx;
  right: 0;
}
.bountyPlatformWrap .itemBox .second{
	font-size: 24rpx;
	color: #666;
  padding: 15rpx 0 10rpx;
}
.bountyPlatformWrap .itemBox .three{
	font-family: PingFangSC-Regular;
	font-size: 24rpx;
	color: #f34848;
  padding-bottom: 10rpx;
}
.bountyPlatformWrap .itemBox .second text{
	font-family: PingFangSC-Regular;
  padding: 0 20rpx;
}
.bountyPlatformWrap .itemBox .second .middleText{
  border-left: 1rpx solid #666;
  border-right: 1rpx solid #666;
}
.bountyPlatformWrap .itemBox .content{
  font-family: PingFangSC-Regular;
	font-size: 26rpx;
	color: #666;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical
}
.bountyPlatformWrap .itemBox .peopleNum{
	font-family: PingFangSC-Regular;
	font-size: 22rpx;
	color: #ccc;
  position: absolute;
  right: 30rpx;
  bottom: 20rpx;
}
