/* pages/workHistory/workHistory.wxss */
.workHistoryWrap .hallRowWrap{
  padding: 0 30rpx;
  border-bottom: 16rpx solid #f8f8f8;
}
.workHistoryWrap .hallRow{
  height: 120rpx;
  line-height: 120rpx;
  border-bottom: 1rpx solid #ddd;
  position:  relative;
}
.workHistoryWrap .hallRow .leftName{
	font-family: PingFangSC-Regular;
	font-size: 32rpx;
	color: #333;
  height: 120rpx;
  line-height: 120rpx;
  float: left;
  padding-left: 20rpx;
}
.workHistoryWrap .hallRow .rightInput{
  float: right;
	font-size: 30rpx;
  margin-right: 50rpx;
  text-align: right;
  height: 120rpx;
  line-height: 120rpx;
  color: #333
}
.workHistoryWrap .hallRow .arrowR{
  width: 14rpx;
  height: 26rpx;
  position: absolute;
  right: 15rpx;
  top: 46rpx;
}
.workHistoryWrap .workContent{
  padding: 30rpx;
}
.workHistoryWrap .workContent .title{
  padding: 30rpx;
	font-family: PingFangSC-Regular;
	font-size: 32rpx;
  height: 32rpx;
  line-height: 32rpx;
	color: #333;
}
.workHistoryWrap .workContent .textareaWrap{
  height: 200rpx;
  padding: 0 10rpx 30rpx;
  border-bottom: 1rpx solid #ddd;
}
.workHistoryWrap .workContent .textareaWrap .textareaBox{
	font-family: PingFangSC-Regular;
	font-size: 26rpx;
	line-height: 36rpx;
	letter-spacing: 0px;
	color: #333;
  width: 100%;
  height: 100%;
}
.workHistoryWrap .bottomBtn{
	width: 600rpx;
	height: 90rpx;
  line-height: 90rpx;
  text-align: center;
	background-color: #4c85fb;
	box-shadow: 0 4rpx 16rpx 0 
		rgba(26, 73, 210, 0.46);
	border-radius: 4rpx;
	font-family: PingFangSC-Regular;
	font-size: 32rpx;
	color: #fff;
  margin: 30rpx auto 30rpx
}
.workHistoryWrap .delBtn{
	font-family: PingFangSC-Regular;
	font-size: 32rpx;
  text-align: center;
	color: #666;
  padding-top: 30rpx;
}