/* pages/bbs/bbs.wxss */
/* 导航栏 */
.bbsWrap .headRow{
  height: 76rpx;
  line-height: 76rpx;
  padding: 0 30rpx 15rpx;
}
.bbsWrap .headRow .serachIptWrap{
  background-color: #f4f4f4;
	border-radius: 2px;
  height: 62rpx;
  padding-top: 14rpx;
  padding-left: 80rpx;
  position: relative;
}
.bbsWrap .headRow .serachIptWrap .search{
  width: 26rpx;
  height: 26rpx;
  position: absolute;
  left: 37rpx;
  top: 26rpx;
}
.bbsWrap .headRow .serachIptWrap .serachIpt{
  font-size: 26rpx;
}
/* 选择类型 */
.bbsWrap .filterWrap{
  line-height: 88rpx;
  height: 88rpx;
  border-bottom: 1rpx solid #f0f0f0;
  padding: 0 60rpx;
}
.bbsWrap .filterWrap .colBox{
  width: 33%;
  float: left;
  text-align: center;
	font-family: PingFangSC-Regular;
	font-size: 28rpx;
	color: #666;
}
.bbsWrap .filterWrap .colBox.active{
	color: #2e70f9;
}
.bbsWrap .filterWrap .colBox .filterImg{
  width: 22rpx;
  height: 22rpx;
  vertical-align: middle;
  margin-left: 10rpx;
}
/* item */
.bbsWrap .itemBox{
  padding: 30rpx 30rpx 20rpx;
  border-bottom: 16rpx solid #f8f8f8;
}
.bbsWrap .itemBox .topName{
  height: 50rpx;
  line-height: 50rpx;
  padding-bottom: 30rpx;
}
.bbsWrap .itemBox .topName .touxiang{
  width: 40rpx;
  height: 40rpx;
  vertical-align: middle;
}
.bbsWrap .itemBox .topName .name{
  display: inline-block;
	font-family: PingFangSC-Regular;
	font-size: 28rpx;
	color: #999;
  margin-left: 14rpx;
}
.bbsWrap .itemBox .topName .shenfen{
  display: inline-block;
	font-family: PingFangSC-Regular;
	font-size: 20rpx;
	color: #fff;
	border-radius: 4rpx;
  padding: 0 12rpx;
  height: 34rpx;
  line-height: 34rpx;
  margin: 0 24rpx 0 10rpx;
}
.bbsWrap .itemBox .topName .shenfen.one{
	background-image: linear-gradient(-90deg, 
		#80a9ff 0%, 
		#3c7bfd 100%);
}
.bbsWrap .itemBox .topName .shenfen.two{
	background-image: linear-gradient(-90deg, 
		#4beeda 0%, 
		#19dfba 100%);
}
.bbsWrap .itemBox .topName .shenfen.three{
	background-image: linear-gradient(-90deg, 
		#f5d50a 0%, 
		#ffcc00 42%, 
		#fca607 100%);
}
.bbsWrap .itemBox .topName .time{
  display: inline-block;
	font-family: PingFangSC-Regular;
	font-size: 22rpx;
	color: #999;
}
.bbsWrap .itemBox .title{
	font-family: PingFangSC-Medium;
	font-size: 30rpx;
	line-height: 48rpx;
	color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical
}
.bbsWrap .itemBox .bottomBox{
  height: 150rpx;
  padding-top: 16rpx;
}
.bbsWrap .itemBox .bottomBox .left{
  width: 450rpx;
  float: left;
  padding-top: 14rpx;
}
.bbsWrap .itemBox .bottomBox .content{
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
	font-family: PingFangSC-Regular;
	font-size: 28rpx;
	line-height: 42rpx;
	color: #666;
}
.bbsWrap .itemBox .bottomBox .right{
  float: right;
}
.bbsWrap .itemBox .bottomBox .right .rightImg{
  width: 220rpx;
  height: 150rpx;
}
.bbsWrap .itemBox .bottomBtn{
  height: 50rpx;
  padding-top: 20rpx;
}
.bbsWrap .itemBox .bottomBtn .address{
	font-family: PingFangSC-Regular;
	font-size: 24rpx;
  line-height: 60rpx;
	color: #999;
  float: left;
}
.bbsWrap .itemBox .bottomBtn .iconBox{
  position: relative;
  float: right;
  margin-right: 40rpx;
  margin-left: 40rpx;
}
.bbsWrap .itemBox .bottomBtn .iconBox .discussIcon{
  width: 27rpx;
  height: 24rpx;
  vertical-align: middle;
}
.bbsWrap .itemBox .bottomBtn .iconBox .heartIcon{
  width: 28rpx;
  height: 24rpx;
  vertical-align: middle;
}
.bbsWrap .itemBox .bottomBtn .iconBox .shareIcon{
  width: 26rpx;
  height: 26rpx;
  vertical-align: middle;
}
.bbsWrap .itemBox .bottomBtn .iconBox .num{
	font-family: PingFangSC-Medium;
	font-size: 20rpx;
	color: #333;
  position: absolute;
  left: 30rpx;
  top: 0;
}