.myRecommendWrap .topBox{
  height: 90rpx;
  line-height: 90rpx;
  display: flex;
  border-bottom: 1rpx solid #eee;
  padding: 0 80rpx;
}
.myRecommendWrap .topBox .item{
  width: 30%;
	font-family: PingFangSC-Regular;
	font-size: 30rpx;
	color: #666;
  position: relative;
  text-align: center;
}
.myRecommendWrap .topBox .item.active{
	font-family: PingFangSC-Medium;
	color: #333;
}
.myRecommendWrap .topBox .item.active::after{
  content: "";
  position: absolute;
  width: 40rpx;
  height: 6rpx;
  background: #2e70f9;
  left: 50%;
  margin-left: -20rpx;
  bottom: 0rpx
}
.myRecommendWrap .itemWrap{
  padding: 0 30rpx;
  border-bottom: 16rpx solid #f8f8f8;
}
.myRecommendWrap .itemWrap .itemTop{
  height: 30rpx;
  padding-top: 30rpx;
}
.myRecommendWrap .itemWrap .itemTop .square{
  float: left;
	width: 30rpx;
	height: 30rpx;
  line-height: 30rpx;
  text-align: center;
	border-radius: 2rpx;
	font-family: PingFangSC-Regular;
	font-size: 20rpx;
	color: #ffffff;
	background-image: linear-gradient(-45deg, 
		#3b7bfd 0%, 
		#80a9ff 100%), 
	linear-gradient(
		#ffffff, 
		#ffffff);
	background-blend-mode: normal, 
		normal;
}
.myRecommendWrap .itemWrap .itemTop .wordText{
	font-family: PingFangSC-Regular;
	font-size: 24rpx;
	color: #333333;
  float: left;
  height: 30rpx;
  line-height: 30rpx;
  margin-left: 15rpx;
}
.myRecommendWrap .itemWrap .itemTop .wordText .arrowR3{
  width: 11rpx;
  height: 19rpx;
  vertical-align: middle;
  margin-top: -5rpx;
}
.myRecommendWrap .itemWrap .itemTop .time{
	font-family: PingFangSC-Regular;
	font-size: 24rpx;
	color: #999;
  float: right;
  height: 30rpx;
  line-height: 30rpx;
}
.myRecommendWrap .itemWrap .itemBox{
  border-bottom: 1rpx solid #f0f0f0;
  padding: 30rpx 0 40rpx;
}
.myRecommendWrap .itemWrap .itemBox .leftImg{
	width: 68rpx;
	height: 30rpx;
  line-height: 30rpx;
  text-align: center;
	background-image: linear-gradient(-45deg, 
		#4874f7 0%, 
		#1a49d2 100%), 
	linear-gradient(
		#ffffff, 
		#ffffff);
	background-blend-mode: normal, 
		normal;
	border-radius: 2rpx;
  float: left;
	font-family: PingFangSC-Regular;
	font-size: 20rpx;
	color: #fff;
}
.myRecommendWrap .itemWrap .itemBox .leftImg2{
  float: left;
  width: 80rpx;
  height: 80rpx;
  padding-top: 15rpx;
}
.myRecommendWrap .itemWrap .itemBox .leftImg2 .logoImg{
  width: 80rpx;
  height: 80rpx;
}
.myRecommendWrap .itemWrap .itemBox .rightText{
  margin-left: 85rpx;
}
.myRecommendWrap .itemWrap .itemBox .rightText.rightText2{
  margin-left: 110rpx;
}
.myRecommendWrap .itemWrap .itemBox .rightText .firstRow{
	font-family: PingFangSC-Medium;
	font-size: 30rpx;
  height: 30rpx;
  line-height: 30rpx;
	color: #333;
}
.myRecommendWrap .itemWrap .itemBox .rightText .secondRow{
	font-family: PingFangSC-Regular;
	font-size: 24rpx;
  height: 24rpx;
  line-height: 24rpx;
	color: #999;
  padding: 15rpx 0 15rpx; 
}
.myRecommendWrap .itemWrap .itemBox .rightText .secondRow .line{
  margin: 0 20rpx;
}
.myRecommendWrap .itemWrap .itemBox .rightText .threeRow{
	font-family: PingFangSC-Regular;
	font-size: 24rpx;
  height: 24rpx;
  line-height: 24rpx;
	color: #f34848;
}
.myRecommendWrap .itemWrap  .bottomRow{
  height: 88rpx;
  line-height: 88rpx;
	font-family: PingFangSC-Regular;
	font-size: 26rpx;
	color: #333;
  text-align: right;
}