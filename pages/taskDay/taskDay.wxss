/* pages/taskDay/taskDay.wxss */
.taskDayWrap{
  padding: 24rpx 30rpx 0;
}
.taskDayWrap .topBox{
	width: 690rpx;
	height: 310rpx;
  margin: 0 auto;
  background: #80a9fe;
	/* opacity: 0.82; */
  position: relative;
  border-bottom-left-radius: 10rpx;
  border-bottom-right-radius: 10rpx;
}
.taskDayWrap .topBox .dayWrap{
  height: 110rpx;
  display: flex;
}
.taskDayWrap .topBox .dayWrap .dayBox{
  width: 94rpx;
  height: 110rpx;
  text-align: center;
  background: #444444;
}
.taskDayWrap .topBox .dayWrap .dayBox.blue{
  background: #80a9fe;
}
.taskDayWrap .topBox .dayWrap .dayBox .first{
	font-family: PingFangSC-Regular;
	font-size: 18rpx;
	color: #fff;
  padding-top: 24rpx;
}
.taskDayWrap .topBox .dayWrap .dayBox .second{
	font-family: PingFangSC-Medium;
	font-size: 30rpx;
	color: #fff;
}
.taskDayWrap .topBox .dayWrap .dayBox .circleOk{
  width: 28rpx;
  height: 28rpx
}
.taskDayWrap .topBox .dayWrap .line{
  width: 6rpx;
  height: 100rpx;
  background: #fff;
}
.taskDayWrap .topBox .num{
	font-family: PingFangSC-Medium;
	font-size: 72rpx;
	color: #fff;
  position: absolute;
  top: 140rpx;
  left: 42rpx;
}
.taskDayWrap .topBox .qiandaoDays{
	font-family: PingFangSC-Regular;
	font-size: 24rpx;
	color: #fff;
  position: absolute;
  top: 240rpx;
  left: 42rpx;
}
.taskDayWrap .topBox .qiandaoBox{
	width: 190rpx;
	height: 78rpx;
  line-height: 78rpx;
	background: linear-gradient(0deg, 
		#f69638 0%, 
		#fbd22c 100%);
	border-radius: 4rpx;
	font-family: PingFangSC-Regular;
	font-size: 24rpx;
	color: #fff;
  text-align: center;
  position: absolute;
  right: 38rpx;
  top: 163rpx;
}
.taskDayWrap .topBox .qiandaoBox.qiandao{
	background: #eee;
	color: #666;
}
.taskDayWrap > .title{
	font-family: PingFangSC-Medium;
	font-size: 32rpx;
  height: 32rpx;
  line-height: 32rpx;
	color: #333;
  border-left: 6rpx solid #2e70f9;
  padding-left: 10rpx;
  margin-top: 32rpx;
}
.taskDayWrap > .title .question{
  width: 30rpx;
  height: 30rpx;
  vertical-align: middle;
}
.taskDayWrap .itemBox{
	width: 688rpx;
	height: 170rpx;
	border-radius: 10rpx;
  position: relative;
  margin-top: 30rpx;
}
.taskDayWrap .itemBox .first{
	font-family: PingFangSC-Medium;
	font-size: 34rpx;
	color: #fff;
  position: absolute;
  left: 40rpx;
  top: 45rpx;
}
.taskDayWrap .itemBox .second{
	font-family: PingFangSC-Regular;
	font-size: 24rpx;
	color: #fff;
  position: absolute;
  left: 40rpx;
  top: 90rpx;
}
.taskDayWrap .itemBox .arrowR{
  width: 13rpx;
  height: 24rpx;
  position: absolute;
  top: 72rpx;
  right: 39rpx;
}