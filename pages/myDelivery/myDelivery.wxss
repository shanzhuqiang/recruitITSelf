/* pages/myDelivery/myDelivery.wxss */
.myDeliveryWrap .topBoxWrap{
  height: 90rpx;
  border-bottom: 1rpx solid #eee;
}
.myDeliveryWrap .topBoxWrap .topBoxLeft{
  width: 100rpx;
  padding-left: 20rpx;
  float: left;
	font-family: PingFangSC-Medium;
	font-size: 30rpx;
	color: #333333;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
}
.myDeliveryWrap .topBoxWrap .topBoxLeft .arrowDown{
  width: 15rpx;
  height: 10rpx;
  vertical-align: middle;
}
.myDeliveryWrap .topBoxWrap .topBox{
  height: 90rpx;
  line-height: 90rpx;
  display: flex;
  margin-left: 140rpx;
}
.myDeliveryWrap .topBoxWrap .topBox .item{
  width: 25%;
	font-family: PingFangSC-Regular;
	font-size: 30rpx;
	color: #666;
  position: relative;
  text-align: center;
}
.myDeliveryWrap .topBoxWrap .topBox .item.active{
	font-family: PingFangSC-Medium;
	color: #333;
}
.myDeliveryWrap .topBoxWrap .topBox .item.active::after{
  content: "";
  position: absolute;
  width: 40rpx;
  height: 6rpx;
  background: #2e70f9;
  left: 50%;
  margin-left: -20rpx;
  bottom: 0rpx
}
/* 筛选 */
.myDeliveryWrap .typeAllMask{
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  top: 91rpx;
  background: rgba(0, 0, 0, 0.4)
}
.myDeliveryWrap .typeAllMask .maskRow{
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
	font-family: PingFangSC-Regular;
	font-size: 28rpx;
	color: #666;
  background: #fff;
  border-bottom: 1rpx solid #f0f0f0;
}
.myDeliveryWrap .typeAllMask .maskRow.active{
	color: #2e70f9;
}
/* 内容 */
.myDeliveryWrap .itemWrap .itemBox .bottomBtn{
	width: 136rpx;
	height: 50rpx;
  line-height: 50rpx;
	border-radius: 4rpx;
	border: solid 1rpx #cccccc;
  text-align: center;
	font-family: PingFangSC-Regular;
	font-size: 26rpx;
	color: #999;
  position: absolute;
  right: 30rpx;
  bottom: 20rpx;
}
.myDeliveryWrap .itemWrap{
  padding: 0 30rpx;
}
.myDeliveryWrap .itemWrap .itemBox{
  border-bottom: 1rpx solid #f0f0f0;
  padding: 40rpx 0;
  position: relative;
}
.myDeliveryWrap .itemWrap .itemBox .leftImg{
	width: 68rpx;
	height: 30rpx;
  line-height: 30rpx;
  text-align: center;
	background-image: linear-gradient(-45deg, 
		#4874f7 0%, 
		#1a49d2 100%), 
	linear-gradient(
		#ffffff, 
		#ffffff);
	background-blend-mode: normal, 
		normal;
	border-radius: 2rpx;
  float: left;
	font-family: PingFangSC-Regular;
	font-size: 20rpx;
	color: #fff;
}
.myDeliveryWrap .itemWrap .itemBox .leftImg2{
  float: left;
  width: 80rpx;
  height: 80rpx;
  padding-top: 15rpx;
}
.myDeliveryWrap .itemWrap .itemBox .leftImg2 .logoImg{
  width: 80rpx;
  height: 80rpx;
}
.myDeliveryWrap .itemWrap .itemBox .rightText{
  margin-left: 85rpx;
}
.myDeliveryWrap .itemWrap .itemBox .rightText.rightText2{
  margin-left: 110rpx;
}
.myDeliveryWrap .itemWrap .itemBox .rightText .firstRow{
	font-family: PingFangSC-Medium;
	font-size: 30rpx;
  height: 30rpx;
  line-height: 30rpx;
	color: #333;
}
.myDeliveryWrap .itemWrap .itemBox .rightText .firstRow .time{
	font-family: PingFangSC-Regular;
	font-size: 24rpx;
	color: #999;
  float: right;
  height: 30rpx;
  line-height: 30rpx;
}
.myDeliveryWrap .itemWrap .itemBox .rightText .secondRow{
	font-family: PingFangSC-Regular;
	font-size: 24rpx;
  height: 24rpx;
  line-height: 24rpx;
	color: #999;
  padding: 15rpx 0 15rpx; 
}
.myDeliveryWrap .itemWrap .itemBox .rightText .secondRow .line{
  margin: 0 20rpx;
}
.myDeliveryWrap .itemWrap .itemBox .rightText .threeRow{
	font-family: PingFangSC-Regular;
	font-size: 24rpx;
  height: 24rpx;
  line-height: 24rpx;
	color: #f34848;
}