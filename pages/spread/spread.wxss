/* pages/spread/spread.wxss */
page{
  height: 100%;
}
.spreadWrap{
  min-height: 1186rpx;
  height: 100%;
  position: relative;
}
.spreadWrap .spreadWrapBg{
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  z-index: 0;
  width: 100%;
  height: 100%;
}
.spreadWrap .yaoqingBtn{
	width: 252rpx;
	height: 68rpx;
	line-height: 68rpx;
  text-align: center;
	background-color: #2e70f9;
	border-style: solid;
	border-width: 3rpx;
	border-image-source: linear-gradient(-24deg, 
		#2e70f9 0%, 
		#4bb8f1 100%);
	border-image-slice: 1;
	font-family: FZMHK--GBK1-0;
	font-size: 31rpx;
  color: #fff;
  margin: 0 auto;
  position: relative;
  top: 553rpx;
  z-index: 1;
}
.spreadWrap .reuleWrap{
	width: 615rpx;
	height: 350rpx;
	background-color: #404ba6;
	border-style: solid;
	border-width: 3rpx;
	border-image-source: linear-gradient(-24deg, 
		#1849bb 0%, 
		#4bb8f1 100%);
	border-image-slice: 1;
  margin: 0 auto;
  position: relative;
  z-index: 1;
  top: 750rpx;
}
.spreadWrap .reuleWrap .ruleTitle{
	width: 184rpx;
	height: 48rpx;
  line-height: 48rpx;
  text-align: center;
  position: absolute;
  left: 23rpx;
  top: -24rpx;
	font-family: FZMHK--GBK1-0;
	font-size: 30rpx;
	letter-spacing: 4rpx;
	color: #fff;
}
.spreadWrap .reuleWrap .ruleTitle .ruleBg{
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  z-index: -1;
}
.spreadWrap .reuleWrap .content{
  padding: 40rpx 26rpx 0 38rpx;
	font-family: SourceHanSansCN-Regular;
	font-size: 24rpx;
	line-height: 48rpx;
	color: #fff;
}
.spreadWrap .maskWrap{
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.4);
  z-index: 999;
}
.spreadWrap .maskWrap .contentBox{
	width: 648rpx;
	height: 774rpx;
  padding-top: 40rpx;
	background-color: #ffffff;
	border-radius: 16rpx;
  margin: 100rpx auto 0;
  text-align: center;
}
.spreadWrap .maskWrap .contentBox .shareImg{
	width: 568rpx;
	height: 653rpx;
	background-color: #fff;
	box-shadow: 0px 0px 17px 9px 
		rgba(0, 0, 0, 0.08);
	border-radius: 16rpx;
}
.spreadWrap .maskWrap .contentBox .text{
	font-family: PingFangSC-Regular;
	font-size: 36rpx;
	line-height: 48rpx;
	color: #2e70f9;
  padding-top: 30rpx;
}