<!--pages/realName/realName.wxml-->
<view class='realNameWrap'>
  <i-panel title="请填写本人真实信息">
    <i-input value="{{ name }}" title="真实姓名：" placeholder="请输入真实姓名" />
    <i-input value="{{ card }}" type="idcard" title="身份证号：" placeholder="请输入身份证号" />
    <i-input value="{{ phone }}" type="number" title="手机号码：" placeholder="请输入手机号码" />
  </i-panel>
  <view class='nextBtn'>下一步</view>
</view>