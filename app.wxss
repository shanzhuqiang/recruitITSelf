.clearfix:after{
  content:"";
  height:0;
  line-height:0;
  display:block;
  visibility:hidden;
  clear:both
}
.clearfix{
  zoom:1;
}
.bottonClass{
  background: transparent;
  margin: 0;
  font-size: 24rpx;
  line-height: 24rpx;
  padding: 0;
}
.bottonClass::after{
  border: none;
}
