  height: 114rpx;
  right: 0;
}
.releaseWrap .bottomClose .bottomCloseIcon{
  width: 114rpx;
  height: 114rpx
}
.mosaic {
  color: transparent!important;
  text-shadow: 0 0 10px rgba(0,0,0,0.5)!important;
}
.fl{
  float: left;
}
.fr{
  float: right;
}
.overflow{
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
