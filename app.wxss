/* 发布遮罩 */
.releaseWrap{
  position: fixed;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  background: rgba(255,255,255,0.9);
  z-index: 999
}
.releaseWrap .iconBox{
  display: flex;
  justify-content: center;
  position: absolute;
  bottom: 200rpx;
  height: 200rpx;
  left: 30rpx;
  right: 30rpx;
}
.releaseWrap .iconBox .iconCol{
  width: 180rpx;
  text-align: center;
	font-family: PingFangSC-Regular;
	font-size: 24rpx;
	color: #333;
}
.releaseWrap .iconBox .iconCol .fabuTiezi{
  width: 152rpx;
  height: 152rpx;
}
.releaseWrap .bottomClose{
  text-align:  center;
  position: absolute;
  left: 0;
